@{
    ViewBag.Title = "UploadFile";
    Layout = "~/Views/Shared/AdminZone.cshtml";
}

<html>
    <body>
        <div class="container-fluid">
        <div class="row">
            
            <div class="col-sm-3"></div>
            <div class="col-sm-6 panel panel-body" style="background:black; margin-top:2%;">
                 <form action="/Home/UploadFile" class="was-validated panel panel-body" enctype="multipart/form-data" method="post" style="background:white;">
                      <div class="form-group form check">
                             <label>Upload Any File</label>
                             <input type="file" id="Upfile" name="Upfile" required>
                      </div>
                      <div class="form-group form-check">
                            <label>Message</label>
                            <textarea class="form-control" rows="3" id="message" name="message" required></textarea>
                      </div>
                     <div class="form-group form check">
                         <label>File Type</label>
                         <select name="type" class="form-control">
                             <option>PPT</option>
                             <option>PDF</option>
                         </select>
                     </div>
                     <button type="submit" class="btn btn-primary btn btn-block" style="background:blue;">Upload</button>
                 </form>
            </div>
            <div class="col-sm-3"></div>
        </div>
            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-6" style="margin-top:1%;">
                    <form action="/Home/Admin">
                     <button class="btn btn-success btn btn-block">Go Back</button>
                    </form>
                </div>
                <div class="col-sm-3"></div>
            </div>
       </div>
    </body>
</html>>
