@{
    ViewBag.Title = "AddMaterial";
    Layout = "~/Views/Shared/AdminZone.cshtml";
}

<html>
    <body>
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-6 panel panel-body" style="background:black; margin-top:2%;">
                    <form action="/Home/AddMaterial" method="post" class="was-validated panel panel-body" enctype="multipart/form-data" style="background:white;">
					<div class="form-group">
						<label>Topic Name:</label>
						<div class="input-block">
						<select name="type">
                            <option>HTML</option>
                            <option>CSS</option>
                            <option>JavaScript</option>
                            <option>Bootstrap</option>
                            <option>SQL</option>
						</select>	
						</div>
						</div>
                        <div class="form-group">
						<label>Topic Name:</label>
						<div class="input-block">
						<input type="text" class="form-control" id="topic" placeholder="Enter Topic Name" name="topic" required>	
						</div>
						</div>
                        <div class="form-group">
						<label>Theory:</label>
						<div class="input-block">
						<textarea class="form-control" rows="3" id="theory" name="theory" required></textarea>	
						</div>
						</div>
                    <button type="submit" class="btn btn-primary btn btn-block" name="addMaterial" id="addMaterial" onclick="" style="background:blue;">Add</button>
                    </form>
                </div>
                <div class="col-sm-3"></div>
            </div>
            <div class="row" style="margin-bottom:2%;">
                <div class="col-sm-3"></div>
                <div class="col-sm-6" style="margin-top:1%;">
                    <form action="/Home/Admin">
                     <button class="btn btn-success btn btn-block">Go Back</button>
                    </form>
                </div>
                <div class="col-sm-3"></div>
            </div>
        </div>
    </body>
</html>
